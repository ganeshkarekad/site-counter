{
  "manifest_version": 3,
  "name": "Foculatics: Site Tracker",
  "version": "2.0",
  "description": "Track your daily browsing habits and analyze your online behavior to improve your productivity and well-being.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "tabs", "webNavigation"],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon32.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
